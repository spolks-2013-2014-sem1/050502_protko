#!/bin/bash

# check it there an port number
if [ -z $1 ]; then
    echo -en '\E[47;31m'"\033[1mYou should provide port number\033[0m"
    tput sgr0
    echo
    exit
fi;

# set variables
SPOLKS_LAB_PORT=$1
SPOLKS_LAB_HOST=${2:-127.0.0.1}
# run command with hardcoded options
./../env/bin/python ./../server $SPOLKS_LAB_PORT $SPOLKS_LAB_HOST --echo --verbose